<!DOCTYPE html>
<html lang="es">
<head>
    <title>¡Salúdame!</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 300px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
            background-color: lightblue;
        }

        input {
            padding: 10px;
            margin-bottom: 10px;
            width: 200px;
        }

        button {
            padding: 8px 15px;
            margin: 5px;
            cursor: pointer;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
        }

        button:hover {
            background-color: #45a049;
        }

        .contenedor {
            background-color: white;
            padding: 30px 40px;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h1 {
            margin-bottom: 20px;
            color: #333;
        }

        #factorial {
            margin-top: 20px;
            font-size: 18px;
            color: #444;
        }
    </style>
</head>

<body>
    <div class="contenedor">
        <h1>¿Cuál es tu número favorito?</h1>
        <input type="number" id="entradaNumero" placeholder="Teclea tu número aquí"><br>
        <button id="botonFactorial">Calcular el factorial</button>
        <div id="factorial"></div>
    </div>

    <script>
        document.getElementById('botonFactorial').addEventListener('click', function () {
            const entrada = document.getElementById('entradaNumero').value;
            const numero = parseInt(entrada);
            const mensajeDiv = document.getElementById('factorial');

            // Validamos si es un número válido y positivo
            if (!isNaN(numero) && numero >= 0) {
                let factorial = 1;
                for (let i = 1; i <= numero; i++) {
                    factorial *= i;
                }
                mensajeDiv.innerHTML = `El factorial de ${numero} es: <strong>${factorial}</strong>`;
            } else {
                mensajeDiv.textContent = "Por favor ingresa un número entero válido (0 o mayor).";
            }
        });
    </script>
</body>
</html>
